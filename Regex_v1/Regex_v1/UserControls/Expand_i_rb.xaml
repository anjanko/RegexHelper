<UserControl x:Class="Regex_v1.UserControls.Expand_i_rb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Stretch" Height="Auto">
        <RadioButton Margin="2,2,0,0" Height="15" Width="15" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="False" BorderBrush="#FF5BC55B" Background="#FFF1FFED" >
            <RadioButton.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.8" ScaleY="1.8"/>
                </TransformGroup>
            </RadioButton.RenderTransform>
        </RadioButton>
        <Expander Header="Expander" Height="100" Margin="45,4,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontSize="16">
            <Grid Background="#FFFFFEEF"/>
        </Expander>

    </Grid>
</UserControl>
